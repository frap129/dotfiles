{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["rules/*.md"],
  "small_model": "github-copilot/gpt-5-mini",
  "theme": "system",
  "share": "disabled",
  "snapshot": false,
  "tui": {
    "scroll_speed": 10,
  },
  "plugin": ["opencode-skills", "opencode-sessions"],
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}",
      ],
      "enabled": true,
    },
    "code-reasoning": {
      "type": "local",
      "command": ["code-reasoning"],
      "enabled": true,
    },
  },
  "lsp": {
    "kotlin": {
      "command": ["kotlin-language-server"],
      "extensions": [".kt", ".kts"],
    },
  },
  "keybinds": {
    "agent_cycle": "ctrl+tab",
    "agent_cycle_reverse": "ctrl+shift+tab",
    "app_exit": "ctrl+q",
  },
  "permission": {
    "bash": {
      "*filter-branch*": "deny",
      "git branch *": "ask",
      "git checkout *": "ask",
      "rm *docs/plans/*": "deny",
    },
  },
  "provider": {
    "fordllm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "FordLLM",
      "options": {
        "baseURL": "{env:FORDLLM_API_URL}",
      },
      "models": {
        "gpt-5-high": {
          "id": "gpt-5",
          "name": "GPT-5 (high)",
          "reasoning": true,
          "attachment": true,
          "limit": {
            "context": 400000,
            "output": 128000,
          },
          "options": {
            "reasoningEffort": "high",
            "verbosity": "medium",
            "reasoningSummary": "auto",
          },
        },
        "gpt-5-medium": {
          "id": "gpt-5",
          "name": "GPT-5 (medium)",
          "reasoning": true,
          "attachment": true,
          "limit": {
            "context": 400000,
            "output": 128000,
          },
          "options": {
            "reasoningEffort": "medium",
            "verbosity": "medium",
            "reasoningSummary": "auto",
          },
        },
        "gpt-5-low": {
          "id": "gpt-5",
          "name": "GPT-5 (low)",
          "reasoning": true,
          "attachment": true,
