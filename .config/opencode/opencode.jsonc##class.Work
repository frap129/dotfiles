{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "github-copilot/gpt-5-mini",
  "share": "disabled",
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "/home/joe/software/opencode-rules/src",
    //"opencode-rules@latest",
  ],
  "experimental": {
    "primary_tools": ["prune"],
    "batch_tool": true,
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}",
      ],
      "enabled": false,
    },
    "searxng": {
      "type": "local",
      "command": ["bunx", "-y", "mcp-searxng"],
      "environment": {
        "SEARXNG_URL": "{env:SEARXNG_URL}",
      },
      "enabled": false,
    },
    "code-reasoning": {
      "type": "local",
      "command": ["code-reasoning"],
      "enabled": true,
    },
    "chrome-dev-tools": {
      "type": "local",
      "command": ["bunx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false,
    },
  },
  "lsp": {
    "kotlin": {
      "command": ["kotlin-language-server"],
      "extensions": [".kt", ".kts"],
    },
    "pyright": {
      "disabled": true,
    },
    "basedpyright": {
      "command": ["basedpyright-langserver", "--stdio"],
      "extensions": [".py", ".pyi"],
    },
    "makefile": {
      "command": [
        "uvx",
        "--from",
        "autotools-language-server",
        "make-language-server",
      ],
      "extensions": ["Makefile", ".mk"],
    },
  },
  "formatter": {
    "mbake": {
      "command": ["uvx", "mbake", "format", "$FILE"],
      "extensions": ["Makefile", ".mk"],
    },
  },
  "permission": {
    "lsp": "deny",
    "bash": {
      "*filter-branch*": "deny",
      "git branch *": "ask",
      "git checkout *": "ask",
      "rm*openspec/*": "ask",
      "git*openspec*": "ask",
      "git commit*-f*": "deny",
      "openspec archive*--skip-specs": "ask",
      "git*--no-verify": "deny",
      "sudo*": "ask",
      "read*": "deny",
    },
  },
  "compaction": {
    "auto": false,
  },
  "agent": {
    "explore": {
      "model": "github-copilot/claude-opus-4.6",
      "variant": "high",
    },
    "programmer": {
      "model": "github-copilot/claude-opus-4.5",
      "variant": "medium",
    },
    "code-reviewer": {
      "model": "github-copilot/gpt-5.2",
      "variant": "medium",
    },
  },
  "provider": {
    "github-copilot": {
      "models": {
        "claude-opus-4.6": {
          "variants": {
            "high": {
              "thinking_budget": 32000,
            },
            "medium": {
              "thinking_budget": 16000,
            },
            "low": {
              "thinking_budget": 8000,
            },
            "thinking": {
              "disabled": true,
            },
          },
        },
        "claude-opus-4.5": {
          "variants": {
            "high": {
              "thinking_budget": 16000,
            },
            "medium": {
              "thinking_budget": 8000,
            },
            "low": {
              "thinking_budget": 4000,
            },
            "thinking": {
              "disabled": true,
            },
          },
        },
      },
    },
    "fordllm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "FordLLM",
      "options": {
        "baseURL": "{env:FORDLLM_API_URL}",
      },
      "models": {
        "gpt-5.2": {
          "id": "gpt-5.2",
          "name": "GPT-5.2",
