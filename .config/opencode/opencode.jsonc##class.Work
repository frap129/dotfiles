{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "fordllm/gpt-5-nano-low",
  "theme": "carbonfox",
  "share": "disabled",
  "tui": {
    "scroll_speed": 10,
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "@mohak34/opencode-notifier@latest",
    //"/home/joe/software/opencode-rules/src",
    "opencode-rules@latest",
  ],
  "experimental": {
    "primary_tools": ["prune"],
    "batch_tool": true,
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}",
      ],
      "enabled": false,
    },
    "code-reasoning": {
      "type": "local",
      "command": ["code-reasoning"],
      "enabled": true,
    },
    "chrome-dev-tools": {
      "type": "local",
      "command": ["bunx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false,
    },
  },
  "lsp": {
    "kotlin": {
      "command": ["kotlin-language-server"],
      "extensions": [".kt", ".kts"],
    },
    "pyright": {
      "disabled": true,
    },
    "basedpyright": {
      "command": ["basedpyright-langserver", "--stdio"],
      "extensions": [".py", ".pyi"],
    },
    "makefile": {
      "command": [
        "uvx",
        "--from",
        "autotools-language-server",
        "make-language-server",
      ],
      "extensions": ["Makefile", ".mk"],
    },
  },
  "formatter": {
    "mbake": {
      "command": ["uvx", "mbake", "format", "$FILE"],
      "extensions": ["Makefile", ".mk"],
    },
  },
  "keybinds": {
    "agent_cycle": "ctrl+tab",
    "agent_cycle_reverse": "ctrl+shift+tab",
  },
  "permission": {
    "lsp": "deny",
    "bash": {
      "*filter-branch*": "deny",
      "git branch *": "ask",
      "git checkout *": "ask",
      "rm*openspec/*": "ask",
      "git*openspec*": "ask",
      "git commit*-f*": "deny",
      "openspec archive*--skip-specs": "ask",
      "git*--no-verify": "deny",
      "sudo*": "ask",
      "read*": "deny",
    },
  },
