{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "github-copilot/gpt-5-mini",
  "theme": "system",
  "tui": {
    "scroll_speed": 10
  },
  "mcp": {
    "docfork": {
      "type": "local",
      "command": ["docfork"],
      "enabled": true
    },
    "code-reasoning": {
      "type": "local",
      "command": ["code-reasoning"],
      "enabled": true
    }
  },
  "lsp": {
    "kotlin": {
      "command": ["kotlin-language-server"],
      "extensions": [".kt", ".kts"]
  }
}
