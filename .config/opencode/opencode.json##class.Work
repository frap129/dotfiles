{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "github-copilot/gpt-5-mini",
  "theme": "system",
  "tui": {
    "scroll_speed": 10
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:ANTHROPIC_API_KEY}"
      },
      "enabled": true
    },
    "code-reasoning": {
      "type": "local",
      "command": ["code-reasoning"],
      "enabled": true
    }
  },
  "lsp": {
    "kotlin": {
      "command": ["kotlin-language-server"],
      "extensions": [".kt", ".kts"]
    }
  }
}
