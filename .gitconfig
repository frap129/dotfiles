[include]
	path = .gitconfig.local

[includeIf "gitdir:~/.local/share/yadm/repo.git"]
	path = ~/.gitconfig.personal

[core]
	editor = nvim
	autocrlf = input
	pager = delta
[safe]
	directory = *
[column]
	ui = auto
[color]
	ui = auto
[help]
	autocorrect = prompt
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	line-numbers = true
[gpg]
	program = gpg
[push]
	gpgSign = if-asked
	default = simple
	autoSetupRemote = true
	followTags = true
[pull]
	rebase = false
[commit]
	verbose = true
[rerere]
	enabled = true
	autoupdate = true
[merge]
	onflictstyle = diff3
[fetch]
	prune = true
	pruneTags = true
	all = true
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[tag]
	sort = version:refname
[init]
	defaultBranch = main
[alias]
	cp = cherry-pick
	cpc = cherry-pick --continue
	cpa = cherry-pick --abort
	cpq = cherry-pick --quit
	hr = reset --hard

[http]
	cookiefile = /home/joe/.gitcookies
[credential]
	helper = store

